    "/recover": {
      "post": {
        "tags": ["Users"],
        "description": "Send email with new token to recover password",
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "user": {
                  "value": {
                    "email": "johndoe2@email.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message to confirm email sent",
            "content": {
              "application/json": {
                "examples": {
                  "Ok": {
                    "value": {
                      "message": "An e-mail was sent to you with a password recover token"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [{}]
      }
    },
    "/resetpassword": {
      "post": {
        "tags": ["Users"],
        "description": "Change password using new token recived by email",
        "requestBody": {
          "content": {
            "aplication/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "token": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "johndoe2@email.com",
                    "password": "123456",
                    "token": "c7e2c3e235dbaeb16794a288969ea217e6c6ab4f"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message to confirm password change",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/statusResponses"
                },
                "examples": {
                  "Ok": {
                    "value": {
                      "status": "Ok",
                      "message": "Password changed!"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [{}]
      }
    },
